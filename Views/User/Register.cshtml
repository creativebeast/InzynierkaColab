    @{
        <html>
        <head>
            <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
            <link href="arkusz.css" rel="stylesheet" type="text/css">
            <title>Stylowy nagłówek</title>

        </head>
        <body>
            <div class="center">

                <div id="panel">
                    <form asp-action="RegisterWorker" asp-controller="User" method="post">
                        <label for="username">Nazwa użytkownika:</label>
                        <input type="text" id="username" name="username">
                        <label for="email">Email:</label>
                        <input type="text" id="email" name="email">
                        <label for="password">Hasło:</label>
                        <input type="password" id="password" name="password">
                        <label for="referalCode">Kod referencyjny:</label>
                        <input type="text" id="referalCode" name="referalCode">
                        <div id="lower">
                            <div id="checkbox">
                                <input type="submit" value="Zarejestruj się!">
                            </div>
                            <div></div>
                            <a asp-area="" asp-controller="Home" asp-action="Login">Masz już konto? Zaloguj się tutaj!</a>
                        </div>
                    </form>
                </div>
            </div>
        </body>
        </html>
