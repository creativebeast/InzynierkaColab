

@{
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
        <link href="arkusz.css" rel="stylesheet" type="text/css">
        <title>Stylowy nagłówek</title>

    </head>
    <body>
        <div class="center">

            <div id="panel">
                <form asp-action="Login" asp-controller="User" method="post" class="dataForm">
                    <label for="username">Nazwa użytkownika:</label>
                    <input type="text" id="username" name="username">
                    <label for="password">Hasło:</label>
                    <input type="password" id="password" name="password">
                    <div id="lower">
                        <div id="checkbox">
                            <input type="checkbox"><label class="check" for="checkbox">Zapamiętaj mnie!</label>
                            </div>
                        <input type="submit" value="Login">
                        <span class="text-center">
                        <div class="registerForm">
                            <a asp-area="" asp-controller="User" asp-action="RegisterComp">Nie masz konta? Zarejestruj się teraz!</a>
                            <div>   </div>
                                <a asp-area="" asp-controller="User" asp-action="Register">Kliknij aby skorzystać z tokenu!</a>
                        </div>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </body>
    </html>
}